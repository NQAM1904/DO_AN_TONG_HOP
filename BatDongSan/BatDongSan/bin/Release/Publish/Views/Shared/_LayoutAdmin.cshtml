    <script>
        Pass = () => {
            $("[name='MATKHAU']").val('');
            $("#mk").modal('show');
        }
        SaveMK = () => {
            let mkcu = $("[name='MKCU']").val();
            let mk = $("[name='MATKHAU']").val();
            let id = @(((USER)Session["AdminLogin"]).idUser);
            if (mkcu == '' || mk == '') {
                $.notify('Vui lòng điền thông tin', 'error');
                return;
            }
            $.ajax({
                url: '/Ajax/PostChangePassword',
                type: 'POST',
                contentType: "application/x-www-form-urlencoded; charset=utf-8",
                dataType: "json",
                data: {
                    oldPass: mkcu,
                    newPass: mk
                },
            }).done(function (result) {
                if (result.Success) {
                    $.notify('Lưu người dùng thành công', 'successs');
                    location.reload();
                    return;
                }
                $.notify('Có lỗi xảy ra', 'error');
            });
        }

        $.LoadingOverlay("show", {
            image: "",
            fontawesome: "fas fa-sync fa-spin",
            size: 1
        });

        // Hide it after 3 seconds
        setTimeout(function () {
            $.LoadingOverlay("hide");
        }, 1000);
    </script>
